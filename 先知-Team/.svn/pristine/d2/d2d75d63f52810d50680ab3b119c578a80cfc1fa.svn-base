	//1.加载用户的粉丝
	public String loadFans(){		
		User currUser = userBiz.getUser(user.getId());
		Set<UserApply> fansSet = currUser.getFans();		
		ActionContext.getContext().getSession().put("fansSet", fansSet);	
		//return "loadFansSuccess";
		return "success";
	}
